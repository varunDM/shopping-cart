<div class="container">
		<h4 style="margin-left: 15px; margin-bottom: 20px;">Admin panel</h4>
		<div class="row">
			<div class="col-md-6">
				<div class="card">
					<h4>Total Orders</h4>
					<h3><%= @purchases.size %></h3>
					<%= link_to 'View more...', orders_path %>
				</div>
			</div>
			<div class="col-md-6">
				<div class="card">
					<h4>Total Customers</h4>
					<h3><%= @customers.size %></h3>
					<a href="#">View more...</a>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<div>
					<h4>Recent Activity</h4>
					<table class="table">
					<% @activities.each do |activity| %>
						<tr><td><b><%= activity.user.first_name %></b> <%= activity.action.html_safe %> <span style="color: #9D9D9D;">(<%= activity.created_at%>)</span></td></tr>
					<% end %>
					</table>
				</div>
				<%= link_to 'View more...', logs_path %>
			</div>

			<div class="col-md-6">
				<div>
					<h4>Orders</h4>
					<table class="table">
						<tr style="background-color: #E2E4E5;">
							<td>OrderID</td>
							<td>Customer</td>
							<td>Date</td>
							<td>Total</td>
						</tr>
						<% @orders.each do |order| %>
							<tr>
								<td><%= order.id %></td>
								<td><%= order.first_name %></td>
								<td><%= order.created_at %></td>
								<td><%= order.price %></td>
							</tr>
						<% end %>
					</table>
					<%= link_to 'View more...', orders_path %>
				</div>
			</div>
		</div>

		<div class="col-md-6">
			<h4>List of Companies</h4>
			<%= link_to "Add Company", new_company_path , :class => "btn btn-primary" %></br></br>
			<table class="table" style="width:70%;">
				<tr style="background-color: #E2E4E5;">
					<td>No.</td>
					<td>Name</td>
					<td>Actions</td>
				</tr>
				<% @companies.each_with_index do |company, index| %>
					<tr>
						<td><%= index+1 %></td>
						<td><%= company.first_name %></td>
						<td>
							<%= link_to "Edit", edit_company_path(company), :class => "btn" %>
							<%= link_to "View", company_path(company), :class => "btn" %>
							<%= link_to "Delete", company_path(company), 
								method: :delete, 
								:class => 'btn',
								data: { confirm: 'Are you sure?   Products associated with this company will also be deleted !'}
							%>
						</td>
					</tr>
				<% end %>
			</table>
		</div>

		<div class="col-md-6">
			<h4>List of Categories</h4>
			<%= link_to "Add Category", new_category_path , :class => "btn btn-primary" %></br></br>
			<table class="table" style="width:70%;">
				<tr style="background-color: #E2E4E5;">
					<td>No.</td>
					<td>Name</td>
					<td>Actions</td>
				</tr>
				<% @categories.each_with_index do |category, index| %>
					<tr>
						<td><%= index+1 %></td>
						<td><%= category.name %></td>
						<td>
							<%= link_to "Edit", edit_category_path(category), :class => "btn" %>
							<%= link_to "View", category_path(category), :class => "btn" %>
							<%= link_to "Delete", category_path(category), 
								method: :delete, 
								:class => 'btn',
								data: { confirm: 'Are you sure?   Products associated with this category will also be deleted !'}
							%>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
</div>