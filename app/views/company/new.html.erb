<div class="container" style="width:50%;">
  <h3 style="margin: 20px -16px;">Create a company</h3>
  <%= form_for @company, url: company_index_path, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
    <div class="form-group">
    <% if @company.errors.present? %>
      <div class="alert alert-danger">
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'Email:' %></br>
      <%= f.text_field :email, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Password:' %></br>
      <%= f.password_field :password, :class => "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :first_name, "Company name:" %></br>
      <%= f.text_field :first_name, :class => "form-control"  %>
    </div>
    <%= f.hidden_field :role, :value => 2 %>
    <div class="form-group">
      <%= f.submit "Save", :class => "btn btn-primary"  %>
      <%= link_to "Cancel", admin_index_path, :class => "btn btn-danger"   %>
    </div>
  <% end %>
</div>