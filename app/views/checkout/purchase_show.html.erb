<div class="container" style=" padding-top: 20px;">
  <h3>Purchase Confirmation</h3>
  <div class="col-md-6" style="padding-left: 0;">
    <h4>Products</h4>
    <% Array(@products).each_with_index do |product, index| %>
      <div class="confirm_product">
        <div class="number"><%= index+1 %></div>
        <%= image_tag product.avatar.url(:thumb) %>
        <h6> <%= product.category.name %> </h6>
        <h4><%= product.name %></h4>
        <h5>Rs. <%= product.price %> </h5>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <h4>Billing Address</h4>
    <div class="confirm_address">
      <h5><b>Name:</b> <%= @address.name %> </h5>
      <h5><b>Address:</b> <%= @address.address %> </h5>
      <h5><b>Country:</b> <%= @address.country %> </h5>
      <h5><b>ZIP:</b><%= @address.zip %> </h5>
      <h5><b>Phone:</b> <%= @address.phone %> </h5>     
    </div>
    <%= link_to "Confirm", purchase_action_path, method: :post, :class => "btn btn-primary" %>
  </div>
 </div>