<div class="nested-fields">
  <li>
    <div class="form-group">
      <% if f.options[:child_index].is_a? Integer %>
        <%= image_tag @images[f.options[:child_index].to_i].image.url(:thumb), :style => 'width: 60px;' %>
      <% end %>
      <%= f.file_field :image, :style => 'display: inline-block;' %>
      <%= link_to_remove_association "remove", f, :style => 'background-color: #C9302C; padding: 5px; color: #FFFFFF;' %>
    </div>
  </li>
</div>
